platform :ios, '8.0'
use_frameworks!
inhibit_all_warnings!

target 'ReactiveLogin' do
    pod 'Firebase/Core'
    pod 'Firebase/Auth'

    # reactive programming
    pod 'RxSwift'
    pod 'RxCocoa'

	target 'ReactiveLoginTests' do
    	inherit! :search_paths
    	# Pods for testing
  	end

  	target 'ReactiveLoginUITests' do
    	inherit! :search_paths
    	# Pods for testing
  	end
end
